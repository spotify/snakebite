import logging

from snakebite.commandlineparser import CommandLineParser

log = logging.getLogger(__name__)

class SnakebiteCli(object):
    def __init__(self):
        clparser = CommandLineParser()
        self.args = clparser.parse()
        clparser.read_config()
        clparser.setup_client(self.args.namenode, int(self.args.port), int(self.args.version))
        self._setup_logging()
        clparser.execute()

    def _setup_logging(self):
        if self.args.debug:
            loglevel = logging.DEBUG
        else:
            loglevel = logging.INFO
        logging.basicConfig(level=loglevel)

SnakebiteCli()
